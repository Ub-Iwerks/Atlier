<%= link_to current_user do %>
  <% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar, alt: "プロフィール写真", class: "avatar", width: "150px" %>
  <% else %>
    <%= image_tag "avatar.png", alt: "プロフィール写真", class: "avatar", width: "150px" %>
  <% end %>
<% end %>
<span><%= link_to "プロフィールへ進む", current_user %></span>
<span><%= pluralize(current_user.works.count, "work") %></span>