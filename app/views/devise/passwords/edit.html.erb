<% set_meta_tags title: "パスワードの再設定" %>
<div class="row">
  <div class="col-md-6  col-md-offset-3">
    <h2>パスワードの再設定</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form--common" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.label :password, "新しいパスワード", class: "f-control" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        <div class="form__underline"></div>
        <p class="form__message">
          <% if @minimum_password_length %>
            <%= @minimum_password_length %>文字以上で設定してください
          <% end %>
        </p>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード(確認用)", class: "f-control" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <div class="form__underline"></div>
      </div>
      <div class="actions">
        <%= f.submit "パスワードを変更する" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

