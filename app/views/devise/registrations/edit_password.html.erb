<% set_meta_tags title: "パスワードを変更" %>
<h2>パスワードを変更</h2>
<%= form_for(resource, as: resource_name, url: edit_password_path, html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <div class="field">
    <%= f.label :current_password %><br>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "f-control" %>
  </div>
  <div class="field">
    <%= f.label :password, "新しいパスワード" %><br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上で設定してください)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "new-password", class: "f-control" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワード(確認)" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "f-control" %>
  </div>
  <div class="actions">
    <%= f.submit "変更する" %>
  </div>
<% end %>