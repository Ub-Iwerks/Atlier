<% set_meta_tags title: "パスワードを変更" %>
<h2>パスワードを変更</h2>
<div class="row">
  <div class="col-md-6  col-md-offset-3">
  <%= form_for(resource, as: resource_name, url: edit_password_path, html: { method: :put, class: "form--common" }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <div class="field field__positive">
      <%= link_to edit_user_registration_path do %>
        <i class="fas fa-chevron-left left"></i>戻る
      <% end %>
    </div>
    <div class="field">
      <%= f.label :current_password, class: "f-control" %>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
      <div class="form__underline"></div>
    </div>
    <div class="field">
      <%= f.label :password, "新しいパスワード", class: "f-control" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <div class="form__underline"></div>
      <p class="form__message">
        <% if @minimum_password_length %>
          <%= @minimum_password_length %>文字以上で設定してください
        <% end %>
      </p>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "新しいパスワード(確認)", class: "f-control" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <div class="form__underline"></div>
    </div>
    <div class="actions">
      <%= f.submit "変更する" %>
    </div>
  <% end %>
  </div>
</div>