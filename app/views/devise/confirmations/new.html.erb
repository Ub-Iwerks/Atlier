<% set_meta_tags title: "本人確認用メールの再送信" %>
<h2>本人確認用メールの再送信</h2>
<div class="row">
  <div class="col-md-6  col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form--common" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, class: "f-control" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        <div class="form__underline"></div>
      </div>
      <div class="actions">
        <%= f.submit "本人確認用メールを再送信する" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

