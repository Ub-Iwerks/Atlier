<li id="user-<%= user.id %>">
  <div class="user_left">
    <span class="avatar">
      <%= link_to user do %>
        <%= display_avatar_for user %>
      <% end %>
    </span>
  </div>
  <div class="user_right">
    <span class="username"><%= link_to user.username, user %></span>
    <span class="email"><%= user.email %></span>
  </div>
</li>