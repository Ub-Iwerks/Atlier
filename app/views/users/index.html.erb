<% set_meta_tags title: "ユーザー一覧" %>
<div class="row">
  <aside class="col-md-3">
    <section class="user--info__aside">
      <%= render "shared/user_info", user: current_user %>
    </section>
    <section class="stats">
      <%= render 'shared/stats', user: current_user %>
    </section>
  </aside>
  <div class="col-md-9">
    <h3>ユーザー一覧</h3>
    <ul class="users">
      <%= render @users %>
    </ul>
    <%= paginate @users %>
  </div>
</div>