<header class="header">
  <div class="container">
    <%= link_to "Atlier", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right header--nav">
        <% if user_signed_in? %>
          <li>
            <%= link_to root_path do %>
              <i class="fas fa-th-large"></i>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fas fa-search"></i>
            <% end %>
          </li>
          <li>
            <%= link_to notifications_path do %>
              <i class="far fa-bell"></i>
              <% if unchecked_notifications.present? %>
                <span class="unchecked"><i class="fas fa-circle"></i></span>
              <% end %>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
              <%= display_avatar_for(current_user, size: Settings.avatar_size[:in_header]) %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", user_path(current_user) %></li>
              <li><%= link_to "アカウント編集", edit_user_registration_path %></li>
              <li><%= link_to "新規作品", new_work_path %></li>
              <li class="divider"></li>
              <li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ホーム",   root_path %></li>
          <li><%= link_to "ログイン", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>