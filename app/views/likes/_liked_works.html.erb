<ul class="user--works__types">
  <li>
    <%= form_tag(url_for(action: 'my_works'), remote: true, method: :get) do %>
      <%= submit_tag "作品一覧", class: "btn__works" %>
    <% end %>
  </li>
  <li>
    <%= form_tag(url_for(action: 'favorites'), remote: true, method: :get) do %>
      <%= submit_tag "お気に入り", class: "btn__works user--works__now" %>
    <% end %>
  </li>
  <li>
    <%= form_tag(stocks_user_path(@user), method: :get) do %>
      <%= submit_tag "保存した作品", class: "btn__works" %>
    <% end %>
  </li>
</ul>
<div class="user--works__favorites">
  <% if @user.likes.present? %>
    <ol class="works">
      <%= render @works %>
    </ol>
    <%= paginate @works %>
  <% else %>
    <h4>いいねした作品がありません</h4>
  <% end %>
</div>
