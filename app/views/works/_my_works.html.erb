<ul class="user--works__types">
  <li>
    <%= form_tag(url_for(action: 'my_works'), remote: true) do %>
      <span class="btn__my_works user--works__now"><strong><%= submit_tag "作品一覧" %></strong></span>
    <% end %>
  </li>
  <li>
    <%= form_tag(url_for(action: 'favorites'), remote: true) do %>
      <span class="btn__liked_works"><%= submit_tag "お気に入り" %></span>
    <% end %>
  </li>
</ul>
<div class="user--works__own" >
  <% if @user.works.present? %>
    <ol class="works">
      <%= render @works %>
    </ol>
    <%= paginate @works %>
  <% elsif current_user?(@user) %>
    <h4>自分の作品を記録しよう！</h4>
  <% else %>
    <h4>作品の登録がまだありません</h4>
  <% end %>
</div>