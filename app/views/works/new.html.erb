<% set_meta_tags title: "新規投稿" %>
<div class="row">
  <div class="col-md-6  col-md-offset-3">
    <h2>新規作品投稿</h2>

    <%= form_with model: @form, url: works_path, method: :post, local: true, class: "form--common form--create_work" do |f| %>
      <%= render "shared/error_messages", object: @crete_errors if @crete_errors %>

      <%= render "form", f: f %>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
