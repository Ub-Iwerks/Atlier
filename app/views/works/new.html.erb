<% set_meta_tags title: "新規投稿" %>
<%= form_with(model: @work_create_form, url: works_path, local: true) do |f| %>
  <%= f.hidden_field :current_user_id, value: current_user.id %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :concept %>
    <%= f.text_area :concept %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
  </div>
  <div class="field">
    <%= f.label :illustration_name %>
    <%= f.text_field :illustration_name %>
  </div>
  <div class="field">
    <%= f.label :illustration_description %>
    <%= f.text_area :illustration_description %>
  </div>
  <div class="field">
    <%= f.label :illustration_photo %>
    <%= f.file_field :illustration_photo, accept: "image/jpeg,image/gif,image/png" %>
  </div>
  <%= f.submit %>
<% end %>
