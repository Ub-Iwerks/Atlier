<li class="comment" id="comment-<%= comment.id %>">
  <div class="comment__main">
    <div class="comment__user">
      <span class="avatar"><%= display_avatar_for comment.user, size: Settings.avatar_size[:in_part] %></span>
      <span class="username"><%= comment.user.username %></span>
    </div>
    <span class="content"><%= comment.content %></span>
  </div>
  <div class="comment__sub">
    <% if current_user?(comment.user) %>
      <span class="delete">
        <%= link_to "削除", comment_path(comment), class: "delete", method: :delete, data: { confirm: "削除してよろしいですか？" } %>
      </span>
    <% end %>
    <span class="timestamp"><%= time_ago_in_words(comment.created_at) %></span>
  </div>
</li>
